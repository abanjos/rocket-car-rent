{
    "openapi": "3.0.0",
    "info": {
        "title": "Rental CarX Docs",
        "description": "An API to build a digital car rent application.",
        "version": "1.0.0",
        "contact": {
            "email": "abanjos@gmail.com"
        }
    },
    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "Create a new category",
                 "description": "Create a new category",
                 "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "SUV",
                                    "description": "Big cars. Closed truck in small scale"
                                }
                            }
                        }
                    }
                 },
                 "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category Already Exist"
                    }
                 }
            },
            "get": {
                "tags": ["Category"],
                "summary": "List all categories",
                "description": "List all categories",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/categories/import": {
            "post": {
                "tags": ["Category"],
                "summary": "Upload a new category",
                "description": "Upload a new category",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Crated"
                    }
                }
            }
        },
        "/specifications": {
            "post": {
                "tags": ["Specifications"],
                "summary": "Create a specification",
                "description": "Create a new specification",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Specification"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Specification already exists!"
                    }
                }
            }
        }
    },
    "definitions": {
        "Specification": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type":"string"
                }
            }
        }
    }
}